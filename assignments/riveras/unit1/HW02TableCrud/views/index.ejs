<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Table CRUD</title>
    <style>
        .container{
            max-width: 960px;
        }
    </style>
  </head>
  <body>    
    <div class="container">
        <div class="shadow-lg p-3 mb-5 bg-body rounded">
            <h4>Datos de la Ferreteria </h4>
            <form action="/crear" method="POST">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input id="nombre" name="nombre" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label for="precio" class="form-label">Precio</label>
                  <input id="precio" name="precio" type="number" class="form-control" required>
              </div>
              <div class="col-md-6">
                <label for="cantidad" class="form-label">Cantidad</label>
                <input id="cantidad" name="cantidad" type="number" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label for="stock" class="form-label">Stock</label>
              <input id="stock" name="stock" type="text" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label for="marca" class="form-label">Marca</label>
              <input id="marca" name="marca" type="text" class="form-control" required>
            </div>
                <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"></i>Almacenar Datos</button>
            </form>
            <!-- Tabla Alumnos  -->
            <table id="tablaHerramientas" class="table mt-4">
                <thead>
                    <tr>
                        <th style="display: none;">ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Stock</th>
                        <th>Marca</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% ferreterias.forEach( (ferreteria) => { %>
                        <tr>
                            <td style="display: none;"><%= ferreteria._id %></td>
                            <td><%= ferreteria.nombre %></td>
                            <td><%= ferreteria.precio %></td>
                            <td><%= ferreteria.cantidad %></td>
                            <td><%= ferreteria.stock %></td>
                            <td><%= ferreteria.marca %></td>
                            <td>
                                <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                                <a href="/borrar/<%= ferreteria._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
    </div>
    
    <!-- Modal para Editar   -->
    <div id="modalFerreteria" class="modal fade" tabindex="-1" aria-labelledby="modalFerreteria" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Editar Info</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/editar" method="POST">
                  <input name="id_editar" id="id_editar" type="text" hidden>
                <div class="mb-3">
                  <label for="nombre_editar" class="col-form-label">Nombre:</label>
                  <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="precio_editar" class="col-form-label">Precio:</label>
                  <input id="precio_editar" name="precio_editar" type="number" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="cantidad_editar" class="col-form-label">Cantidad:</label>
                  <input id="cantidad_editar" name="cantidad_editar" type="number" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="stock_editar" class="col-form-label">Stock:</label>
                  <input id="stock_editar" name="stock_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="marca_editar" class="col-form-label">Marca:</label>
                  <input id="marca_editar" name="marca_editar" type="text" class="form-control" value="">
                </div>
             
            </div>
            <div class="modal-footer">              
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
          </div>
        </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
  </body>
</html>